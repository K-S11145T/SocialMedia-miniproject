<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>

<body>
  <div class="w-full h-screen text-white p-10 bg-zinc-900">
    <div class="flex w-full justify-between ">
      <h3 class="text-xl mb-10">Hello <%= user.name%>
      </h3>
      <a href="/logout">Logout</a>

    </div>
    <h1>You can create a new post</h1>
    <form action="/post" method="post">
      <textarea class="resize-none bg-transparent p-3 border-2 border-zinc-600 w-1/2 block rounded-md mt-5 outline-none"
        placeholder="what's is in you mind" name="content" id=""></textarea>
      <input class="bg-blue-500 cursor-pointer mt-5 p-2 rounded " type="submit" value="Create new post">
    </form>

    <div class="mt-10">
      <h2>Your Posts</h2>
      <div class="flex gap-5 overflow-auto p-5 flex-nowrap">

        <% user.posts.forEach((post)=>{ %>
          <div class="border-2 mt-4 shrink-0 border-zinc-600 rounded w-1/3 p-5">
            <h1 class="text-yellow-300 mb-4"><%= user.username%></h1>
            <p><%= post.content %></p>
            <small class="mt-4 inline-block"><%=post.likes.length%> likes</small>
            <div class="mt-4 flex gap-3">
              <a class="text-blue-500" href="/like/<%= post._id %>"> <%= post.likes.indexOf(user._id)== -1? "Like" : "Unlike"%></a>
              <a class="text-zinc-400" href="/edit/<%= post._id %>">edit</a>
            </div>
          </div>
        <% }) %>
      </div>

    </div>
  </div>


</body>

</html>